{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "AUTH_SQUARE_ID",
    "AUTH_SQUARE_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "sync-components"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "sync-components": {
      "inputs": [
        "components/src/ui/**"
      ],
      "outputs": [
        "apps/docs/components/ui/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}