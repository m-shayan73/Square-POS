{
  "extends": "@pallas-ui/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "styled-system/*": ["./styled-system/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "styled-system/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
